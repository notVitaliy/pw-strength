{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "preserveConstEnums": true,
    "removeComments": false,
    "lib": ["es6", "dom"],
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "types": ["node"],
  "exclude": ["node_modules"]
}
